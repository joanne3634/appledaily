        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/36119006/5/9499/20141002/appledaily/'+Math.random(),
                  dataType: 'jsonp',
                  success: function(data) {}
              })
