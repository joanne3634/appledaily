        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/34883401/5/9499/20130313/appledaily/'+Math.random(),
                  dataType: 'jsonp',
