    $(".pushbtn").click(function () {
    if($('#subSection').css('display')=='none'){
       $('#subSection').css('display','block');
       $('#subSection2').css('display','none');
       $('#subSection3').css('display','none');
    }
    else{
       $('#subSection').css('display','none');
    }
    });
    $(".pushbtn2").click(function () {
    if($('#subSection2').css('display')=='none'){
       $('#subSection2').css('display','block');
       $('#subSection').css('display','none');
       $('#subSection3').css('display','none');
    }
    else{
       $('#subSection2').css('display','none');
    }
    });
    $(".pushbtn3").click(function () {
    if($('#subSection3').css('display')=='none'){
       $('#subSection3').css('display','block');
       $('#subSection').css('display','none');
       $('#subSection2').css('display','none');
    }
    else{
       $('#subSection3').css('display','none');
    }
    });

    //美蘋下拉
    $(".pushbtnusa").click(function () {
    if($('#subSectionusa').css('display')=='none'){
       $('#subSectionusa').css('display','block');
    }
    else{
       $('#subSectionusa').css('display','none');
    }
    });	
    $(document).ready(function() {
        if (GeoDFP['CC'] == 'US') {
            switch(GeoDFP['D']) {
                case '803' :
                    $('#usa_btn').attr("href", "/realtimenews/section/la");
                    break;
                case '807' :
                    $('#usa_btn').attr("href", "/realtimenews/section/sf");
                    break;
                case '501' :
                    $('#usa_btn').attr("href", "/realtimenews/section/ny");
                    break;
            }
            $('#sitenav').hide();  
            $('#siteusnav').show();                         
        } 
        var opacity = 0.5,
            toOpacity = 1,
            duration = 250;
        $('.opacity').css('opacity', opacity).hover(function() {
            $(this).fadeTo(duration, toOpacity);
        }, function() {
            $(this).fadeTo(duration, opacity);
        });
        $(window).scroll(function() {
          if($(this).scrollTop()>130&&($(this).scrollTop()-(-800)<$(document).height()-350)){
              $('#door').css('position','fixed').css('top','-45px');
          }else{
              $('#door').css('position','relative').css('top','0px');
          }
        });

        $.tools.dateinput.localize("tw", {
            months:       '一月,二月,三月,四月,五月,六月,七月,八月,九月,十月,十一月,十二月',
