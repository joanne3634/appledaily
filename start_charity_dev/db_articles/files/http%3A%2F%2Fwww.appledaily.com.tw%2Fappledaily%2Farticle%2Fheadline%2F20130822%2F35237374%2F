        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35237374/5/9499/20130822/appledaily/'+Math.random(),
                  dataType: 'jsonp',
