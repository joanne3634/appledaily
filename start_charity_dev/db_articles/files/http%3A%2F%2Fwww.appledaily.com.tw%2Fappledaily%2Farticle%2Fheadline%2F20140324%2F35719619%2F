        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35719619/5/9499/20140324/appledaily/'+Math.random(),
                  dataType: 'jsonp',
                  success: function(data) {}
              })
