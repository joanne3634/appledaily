        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35867353/5/9499/20140603/appledaily/'+Math.random(),
                  dataType: 'jsonp',
