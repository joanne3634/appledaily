        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35021781/5/9499/20130517/appledaily/'+Math.random(),
                  dataType: 'jsonp',
