        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/34854064/5/9499/20130227/appledaily/'+Math.random(),
                  dataType: 'jsonp',
