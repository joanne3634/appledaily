        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35455127/5/9499/20131122/appledaily/'+Math.random(),
                  dataType: 'jsonp',
