        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35503757/5/9499/20131213/appledaily/'+Math.random(),
                  dataType: 'jsonp',
