        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/36042538/5/9499/20140825/appledaily/'+Math.random(),
                  dataType: 'jsonp',
