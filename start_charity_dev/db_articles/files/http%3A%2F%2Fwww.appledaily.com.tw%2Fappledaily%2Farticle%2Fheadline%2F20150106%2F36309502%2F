        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/36309502/5/9499/20150106/appledaily/'+Math.random(),
                  dataType: 'jsonp',
