                            function changAnimation(count) {
                                $.ajax({
                                        url: "/appledaily/videoajax/"+count+"/"+Math.random(),
                                        dataType: 'html',
                                        error: function(xhr){},
                                        success: function(response) {$('#videolist').html(response);}
                                  });
                            }
                            changAnimation(0);
                        </script>                        
                             
