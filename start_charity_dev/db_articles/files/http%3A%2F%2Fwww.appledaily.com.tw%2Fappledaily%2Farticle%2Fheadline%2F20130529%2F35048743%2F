        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35048743/5/9499/20130529/appledaily/'+Math.random(),
                  dataType: 'jsonp',
