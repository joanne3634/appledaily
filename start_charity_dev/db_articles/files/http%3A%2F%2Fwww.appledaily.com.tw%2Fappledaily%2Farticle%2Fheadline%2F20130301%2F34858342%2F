        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/34858342/5/9499/20130301/appledaily/'+Math.random(),
                  dataType: 'jsonp',
