        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/34878619/5/9499/20130311/appledaily/'+Math.random(),
                  dataType: 'jsonp',
