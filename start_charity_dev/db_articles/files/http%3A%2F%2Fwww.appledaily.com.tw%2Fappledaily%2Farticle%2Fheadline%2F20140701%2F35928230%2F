        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35928230/5/9499/20140701/appledaily/'+Math.random(),
                  dataType: 'jsonp',
