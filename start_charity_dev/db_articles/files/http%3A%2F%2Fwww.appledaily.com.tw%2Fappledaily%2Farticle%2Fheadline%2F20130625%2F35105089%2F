        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35105089/5/9499/20130625/appledaily/'+Math.random(),
                  dataType: 'jsonp',
