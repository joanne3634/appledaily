        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35926413/5/9499/20140630/appledaily/'+Math.random(),
                  dataType: 'jsonp',
                  success: function(data) {}
              })
