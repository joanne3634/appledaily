        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35803731/5/9499/20140502/appledaily/'+Math.random(),
                  dataType: 'jsonp',
