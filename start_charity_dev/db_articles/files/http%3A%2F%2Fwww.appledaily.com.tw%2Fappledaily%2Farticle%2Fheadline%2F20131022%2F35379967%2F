        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35379967/5/9499/20131022/appledaily/'+Math.random(),
                  dataType: 'jsonp',
