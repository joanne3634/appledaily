        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35609892/5/9499/20140129/appledaily/'+Math.random(),
                  dataType: 'jsonp',
                  success: function(data) {}
              })
