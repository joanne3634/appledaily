        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/34873618/5/9499/20130308/appledaily/'+Math.random(),
                  dataType: 'jsonp',
