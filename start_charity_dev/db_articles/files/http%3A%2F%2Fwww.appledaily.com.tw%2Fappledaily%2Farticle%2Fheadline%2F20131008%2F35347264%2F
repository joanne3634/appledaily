        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35347264/5/9499/20131008/appledaily/'+Math.random(),
                  dataType: 'jsonp',
