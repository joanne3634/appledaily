        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35014804/5/9499/20130514/appledaily/'+Math.random(),
                  dataType: 'jsonp',
