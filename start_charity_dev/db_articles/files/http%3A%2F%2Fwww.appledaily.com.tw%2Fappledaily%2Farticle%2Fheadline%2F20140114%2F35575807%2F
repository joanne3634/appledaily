        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35575807/5/9499/20140114/appledaily/'+Math.random(),
                  dataType: 'jsonp',
