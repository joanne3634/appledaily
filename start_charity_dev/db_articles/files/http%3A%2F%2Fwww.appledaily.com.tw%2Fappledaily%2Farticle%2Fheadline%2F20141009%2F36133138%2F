        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/36133138/5/9499/20141009/appledaily/'+Math.random(),
                  dataType: 'jsonp',
