        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/36952294/5/9499/20151214/appledaily/'+Math.random(),
                  dataType: 'jsonp',
