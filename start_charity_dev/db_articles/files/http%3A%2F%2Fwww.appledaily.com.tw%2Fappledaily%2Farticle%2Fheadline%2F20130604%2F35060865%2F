        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35060865/5/9499/20130604/appledaily/'+Math.random(),
                  dataType: 'jsonp',
                  success: function(data) {}
              })
