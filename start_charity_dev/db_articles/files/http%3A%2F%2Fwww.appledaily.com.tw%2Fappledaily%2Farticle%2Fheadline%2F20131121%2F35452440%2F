        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35452440/5/9499/20131121/appledaily/'+Math.random(),
                  dataType: 'jsonp',
