        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35053255/5/9499/20130531/appledaily/'+Math.random(),
                  dataType: 'jsonp',
