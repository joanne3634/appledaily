        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35462997/5/9499/20131126/appledaily/'+Math.random(),
                  dataType: 'jsonp',
