        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/34843627/5/9499/20130222/appledaily/'+Math.random(),
                  dataType: 'jsonp',
