              })
        }

      //更改字級大小
        function doZoom(size) {
            size=size*1;
            $('#smaller').removeClass();
            $('#middle').removeClass();
            $('#bigger').removeClass();
            $('#smaller').addClass('smaller overcooked');
            $('#middle').addClass('middle overcooked');
            $('#bigger').addClass('bigger overcooked');
            switch(size){
              case 16:
                $('#smaller').addClass('smon');
                break;
              case 18:
                $('#middle').addClass('mion');
                break;
              case 20:
                $('#bigger').addClass('bion');
                break;
            }
            document.cookie="FRONTSIZE="+size+"; path=/";
            $('#h1').css({'font-size': (size+8)+'px'});
            $('#h2').css({'font-size': (size+2)+'px'});
            $('#introid').css({'font-size': size+'px'});
            $('h2#bhead').css({'font-size': size+'px'});
            $('p#bcontent').css({'font-size': size+'px'});
        }

        function getCookieData(name) {
            var patrn = new RegExp( "^" + name + "=(.*?);" ),
                patr2 = new RegExp( " " + name + "=(.*?);" );
            if ( match = (document.cookie.match(patrn) || document.cookie.match(patr2)) )
               return match[1];
            return false;
        }

        $(document).ready(function() {
            fontsize = getCookieData('FRONTSIZE');
            if(fontsize) {
                  doZoom(fontsize);
              }
              else {
                  doZoom(18);
              }
              $('.lbimg a').lightBox();
              $.ajax({
                    url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/v/35208206/5/9499/20130809/appledaily/'+Math.random(),
                    dataType: 'jsonp',
                    success: function(data) {}
              });
        });
        window.___gcfg = {lang: 'zh-TW'};
        (function() {
          var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
          po.src = 'https://apis.google.com/js/plusone.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
        })();
        
        function MM_jumpMenu(targ,selObj,restore){
            eval(targ+".location='"+selObj.options[selObj.selectedIndex].value+"'");		
            if (restore) selObj.selectedIndex=0;  
        }
    </script>    
