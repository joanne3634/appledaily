        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35088167/5/9499/20130617/appledaily/'+Math.random(),
                  dataType: 'jsonp',
                  success: function(data) {}
              })
