        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/36894056/5/9499/20151112/appledaily/'+Math.random(),
                  dataType: 'jsonp',
