        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/34998137/5/9499/20130506/appledaily/'+Math.random(),
                  dataType: 'jsonp',
                  success: function(data) {}
              })
