        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/34955292/5/9499/20130416/appledaily/'+Math.random(),
                  dataType: 'jsonp',
