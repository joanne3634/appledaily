        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35176874/5/9499/20130726/appledaily/'+Math.random(),
                  dataType: 'jsonp',
