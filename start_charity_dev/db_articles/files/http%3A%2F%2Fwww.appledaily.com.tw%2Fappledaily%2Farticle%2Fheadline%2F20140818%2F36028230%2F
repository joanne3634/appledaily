        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/36028230/5/9499/20140818/appledaily/'+Math.random(),
                  dataType: 'jsonp',
                  success: function(data) {}
              })
