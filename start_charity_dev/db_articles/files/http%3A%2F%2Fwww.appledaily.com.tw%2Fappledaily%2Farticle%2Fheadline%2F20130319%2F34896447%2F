        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/34896447/5/9499/20130319/appledaily/'+Math.random(),
                  dataType: 'jsonp',
