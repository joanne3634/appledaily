        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/34960215/5/9499/20130418/appledaily/'+Math.random(),
                  dataType: 'jsonp',
                  success: function(data) {}
              })
