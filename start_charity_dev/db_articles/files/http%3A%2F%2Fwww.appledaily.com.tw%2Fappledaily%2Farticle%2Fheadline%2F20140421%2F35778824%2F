        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35778824/5/9499/20140421/appledaily/'+Math.random(),
                  dataType: 'jsonp',
