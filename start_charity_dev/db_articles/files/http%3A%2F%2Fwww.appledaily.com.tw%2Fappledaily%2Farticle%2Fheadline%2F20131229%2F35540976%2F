        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35540976/5/9499/20131229/appledaily/'+Math.random(),
                  dataType: 'jsonp',
                  success: function(data) {}
              })
