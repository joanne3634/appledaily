        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35037695/5/9499/20130524/appledaily/'+Math.random(),
                  dataType: 'jsonp',
