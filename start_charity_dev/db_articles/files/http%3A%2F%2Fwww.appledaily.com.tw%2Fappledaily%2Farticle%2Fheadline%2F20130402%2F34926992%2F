        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/34926992/5/9499/20130402/appledaily/'+Math.random(),
                  dataType: 'jsonp',
                  success: function(data) {}
              })
