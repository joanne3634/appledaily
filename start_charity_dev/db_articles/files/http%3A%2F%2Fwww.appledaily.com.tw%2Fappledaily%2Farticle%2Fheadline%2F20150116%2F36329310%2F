        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/36329310/5/9499/20150116/appledaily/'+Math.random(),
                  dataType: 'jsonp',
