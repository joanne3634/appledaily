        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35030334/5/9499/20130521/appledaily/'+Math.random(),
                  dataType: 'jsonp',
