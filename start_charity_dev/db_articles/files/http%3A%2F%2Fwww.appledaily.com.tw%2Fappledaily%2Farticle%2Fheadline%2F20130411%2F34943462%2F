        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/34943462/5/9499/20130411/appledaily/'+Math.random(),
                  dataType: 'jsonp',
