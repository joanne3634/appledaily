        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/34940952/5/9499/20130410/appledaily/'+Math.random(),
                  dataType: 'jsonp',
