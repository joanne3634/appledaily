        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/34952016/5/9499/20130415/appledaily/'+Math.random(),
                  dataType: 'jsonp',
                  success: function(data) {}
              })
