        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35127370/5/9499/20130705/appledaily/'+Math.random(),
                  dataType: 'jsonp',
