        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/34912855/5/9499/20130327/appledaily/'+Math.random(),
                  dataType: 'jsonp',
