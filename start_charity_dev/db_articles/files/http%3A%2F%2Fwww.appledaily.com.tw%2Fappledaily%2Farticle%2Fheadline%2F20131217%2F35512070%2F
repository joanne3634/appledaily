        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35512070/5/9499/20131217/appledaily/'+Math.random(),
                  dataType: 'jsonp',
