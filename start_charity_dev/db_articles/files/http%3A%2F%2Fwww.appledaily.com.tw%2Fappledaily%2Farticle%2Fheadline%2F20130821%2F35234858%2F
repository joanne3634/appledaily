        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35234858/5/9499/20130821/appledaily/'+Math.random(),
                  dataType: 'jsonp',
