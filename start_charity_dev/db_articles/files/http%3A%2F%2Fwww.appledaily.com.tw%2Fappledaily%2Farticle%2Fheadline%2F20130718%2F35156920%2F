            days:         '日,一,二,三,四,五,六',
            shortDays:    '日,一,二,三,四,五,六'
        });

        $("#DailyDate").dateinput({lang: 'tw',selectors: true,format: 'yyyymmdd',trigger: true ,min:'2003-05-02',max:'2016-05-27',offset: [0,-50],speed: 'fast',yearRange:[-20,1]});
