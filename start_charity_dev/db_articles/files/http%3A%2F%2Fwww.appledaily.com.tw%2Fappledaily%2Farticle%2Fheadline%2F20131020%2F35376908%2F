        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35376908/5/9499/20131020/appledaily/'+Math.random(),
                  dataType: 'jsonp',
