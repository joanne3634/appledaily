        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/36175972/5/9499/20141030/appledaily/'+Math.random(),
                  dataType: 'jsonp',
