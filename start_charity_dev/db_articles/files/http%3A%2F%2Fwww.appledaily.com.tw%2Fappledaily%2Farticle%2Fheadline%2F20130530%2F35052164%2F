        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35052164/5/9499/20130530/appledaily/'+Math.random(),
                  dataType: 'jsonp',
