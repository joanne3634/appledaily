        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/34910671/5/9499/20130326/appledaily/'+Math.random(),
                  dataType: 'jsonp',
                  success: function(data) {}
              })
