        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35382481/5/9499/20131023/appledaily/'+Math.random(),
                  dataType: 'jsonp',
