        function setimgpv(){
            $.ajaxSetup({ cache: false });
            $.ajax({
                  url: 'http://weblogging.appledaily.com.tw/api/SetClick/n/n/35693305/5/9499/20140312/appledaily/'+Math.random(),
                  dataType: 'jsonp',
